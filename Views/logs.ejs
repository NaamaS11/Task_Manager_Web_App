<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log File</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <h1 class="text-center mb-4">Log File</h1>

      <div class="table-responsive">
        <table class="table table-bordered table-striped text-center">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Log Entry</th>
            </tr>
          </thead>
          <tbody>
            <% logs.forEach((log, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= log %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="text-center mt-4">
        <a href="/tasks" class="btn btn-primary">Back to Tasks</a>
      </div>
    <div class="text-center mt-4">
        <form action="/logs?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Delete Log File</button>
        </form>
      </div>
    <footer>Â©All rights reserved to Rachel Adi Levon</footer>
  </body>
</html>
